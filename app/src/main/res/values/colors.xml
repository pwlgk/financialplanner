    <color name="colorOnSurface">@color/light_onSurface</color>
    <color name="colorSurfaceVariant">@color/light_surfaceVariant</color>
    <color name="colorOnSurfaceVariant">@color/light_onSurfaceVariant</color>
    <color name="colorOutline">@color/light_outline</color>
    <color name="colorOutlineVariant">@color/light_outlineVariant</color>
    <color name="colorBackground">@color/light_background</color>
    <color name="colorOnBackground">@color/light_onBackground</color>

